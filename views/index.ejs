<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Index</title>
</head>
<body>
  <h1>Hello</h1>
  <p>Welcome to <%= title %></p>
  <button><a href="/notes/new">New</a></button>

  <div class="container">
    <% data.forEach(function(user){ %>
      <div class="flexNote">
        <% if (user.starred == true) { %>
          <div class="noteBody" style="background-color: <%=user.color%>; cursor: pointer; border: thick, double" onclick="location.href='/notes/<%= user.id %>/edit';">
            <h1 class="text"><%= user.title %></h1>
            <p class="text"><%= user.body %></p>
          </div>
          <button class="button" onclick="location.href='/notes/<%= user.id %>/edit';">Edit</button>
          <button class="button" onclick="location.href='/notes/<%= user.id %>/delete';">Delete</button>
        <% } else { %>
          <div class="noteBody" style="background-color: <%=user.color%>; cursor: pointer;" >
            <h1 class="text"><%= user.title %></h1>
            <p class="text"><%= user.body %></p>
          </div> 
          <a class="button" href='/notes/<%= user.id %>/edit'>Edit</a>
          <a class="button" href='/notes/<%= user.id %>/delete'>Delete</a>
          <!-- <button class="button" href="/notes/<%= user.id %>/edit">Edit</button>
           onclick="location.href='/notes/<%= user.id %>/edit';"
          <button class="button" href="/notes/<%= user.id %>/delete">Delete</button> -->
        <% } %>
      </div>
    <% }); %>
  </div>

